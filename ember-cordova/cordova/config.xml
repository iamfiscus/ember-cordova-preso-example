<?xml version='1.0' encoding='utf-8'?>
<widget id="com.iamfiscus.ember.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>emberATX</name>
    <description>
        A sample ember application for a presentation
    </description>
    <author email="me@iamfiscus.com" href="http://iamfiscus.com">
        iamFiscus LLC
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/assets/images/logo.png" width="320" height="480"/>
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="~1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
